<%= form_with(model: [:admin, admin_article], local: true, class: "space-y-6") do |form| %>
  <% if admin_article.errors.any? %>
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded-md" role="alert">
      <h2 class="text-lg font-semibold"><%= pluralize(admin_article.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul class="mt-2 list-disc list-inside">
        <% admin_article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 #{'border-red-500' if admin_article.errors[:title].any?}", required: true %>
  </div>

  <div>
    <%= form.label :lead, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :lead, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 #{'border-red-500' if admin_article.errors[:lead].any?}" %>
  </div>

  <div>
    <%= form.label :content, class: "block text-sm font-medium text-gray-700" %>
    <%= form.rich_text_area :content, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 #{'border-red-500' if admin_article.errors[:content].any?}" %>
  </div>

  <div>
    <%= form.label :published_at, class: "block text-sm font-medium text-gray-700" %>
    <%= form.datetime_local_field :published_at, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 #{'border-red-500' if admin_article.errors[:published_at].any?}" %>
  </div>

  <div class="flex justify-end space-x-4">
    <%= link_to "Cancel", admin_path, class: "px-4 py-2 text-gray-600 hover:text-gray-800" %>
    <%= form.submit "Create Article", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
  </div>
<% end %>
