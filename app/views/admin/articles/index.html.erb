<div class="container mx-auto px-4 py-8">
    <% if notice %>
      <p class="bg-green-100 text-green-800 px-4 py-2 rounded-md mb-6"><%= notice %></p>
    <% end %>

    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 mb-6">
      <h1 class="text-3xl font-bold text-gray-800">Articles</h1>
      <div class="flex items-center gap-3">
        <%= link_to "New article", new_admin_article_path, class: "inline-flex items-center gap-2 bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition duration-200" %>
        <%= button_to "Log out", destroy_user_session_path, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "inline-flex items-center gap-2 bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition duration-200" %>
      </div>
    </div>

    <div id="admin_articles" class="bg-white shadow-md rounded-lg overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Lead</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Content</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Published At</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Slug</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @admin_articles.each do |admin_article| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= admin_article.title %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= admin_article.lead&.truncate(50) %></td>
                <td class="px-6 py-4 text-sm text-gray-500"><%= admin_article.content.to_plain_text.truncate(50) %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= admin_article.published_at&.strftime("%B %d, %Y %H:%M") %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= admin_article.slug %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <%= link_to "Show", [:admin, admin_article], class: "text-blue-600 hover:text-blue-800 mr-3" %>
                  <%= link_to "Edit", edit_admin_article_path(admin_article), class: "text-indigo-600 hover:text-indigo-800 mr-3" %>
                  <%= button_to "Delete", [:admin, admin_article], method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "text-red-600 hover:text-red-800" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
